<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingLeft="60dp"
    android:paddingRight="15dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_message_shape"
        android:elevation="2dp"
        android:padding="10dp"
        android:text="Placeholder message"
        android:textColor="#fff"
        android:textSize="@dimen/txt_subtitle_text_size" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message_body"
        android:elevation="2dp"
        android:text="12/10/2018"
        android:textColor="@color/gray"
        android:textSize="@dimen/txt_small_text_size" />

</RelativeLayout>