<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/double_margin"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="@dimen/txt_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/half_margin"
            android:text="Ultimo paso"
            android:textAlignment="center"
            android:textSize="@dimen/txt_title_text_size" />

        <Button
            android:id="@+id/activity_signin_signin_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/activity_signin_confirm_pass_etxt"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/double_margin"
            android:background="@drawable/positive_button_shape"
            android:onClick="signup"
            android:text="@string/btn_signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_signin_confirm_pass_etxt"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/double_margin" />

    </RelativeLayout>

</ScrollView>