<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:mContext=".activities.parent.ParentSemaphore">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_margin="@dimen/half_margin"
        android:layout_rowWeight="0"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@+id/activity_parent_semaphore_img"
                android:layout_width="@dimen/semaphore_icon_size"
                android:layout_height="@dimen/semaphore_icon_size"
                android:contentDescription=""
                app:srcCompat="@drawable/ic_semaphore" />

            <TextView
                android:id="@+id/activity_parent_semaphore_status_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activity_parent_semaphore_img"
                android:text="@string/semaphore_green_status_name"
                android:textSize="@dimen/txt_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_parent_semaphore_msg_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activity_parent_semaphore_img"
                android:layout_below="@+id/activity_parent_semaphore_status_txt"
                android:text="@string/semaphore_green_status_msg"
                android:textSize="@dimen/txt_subtitle_text_size"
                android:textStyle="normal" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>