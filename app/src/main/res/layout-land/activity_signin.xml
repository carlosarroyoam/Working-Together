<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding"
        tools:mContext=".Signin">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/padding">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/squared_app_icon_size"
                    android:layout_height="@dimen/squared_app_icon_size"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin"
                    app:srcCompat="@mipmap/ic_launcher_foreground"
                    android:contentDescription="" />

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:text="@string/txt_signin_msg"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_subtitle_text_size"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_signin_user_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview"
                    android:layout_marginTop="@dimen/margin">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/etxt_user"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/etxt_text_size"
                        android:importantForAutofill="no" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_signin_pass_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_signin_user_etxt"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/etxt_password"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword"
                        android:textSize="@dimen/etxt_text_size"
                        android:importantForAutofill="no" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/activity_signin_signin_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_below="@+id/activity_signin_pass_etxt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/positive_button_shape"
                    android:onClick="signin"
                    android:text="@string/btn_signin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btn_text_size" />

                <TextView
                    android:id="@+id/activity_signin_forgot_password_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_signin_signin_btn"
                    android:layout_marginTop="@dimen/half_margin"
                    android:onClick="forgotPassword"
                    android:text="@string/forgot_password_msg"
                    android:textAlignment="center"
                    android:textSize="@dimen/btn_text_size" />

                <TextView
                    android:id="@+id/activity_signin_signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:onClick="signup"
                    android:padding="@dimen/padding"
                    android:text="@string/txt_no_account_msg"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_text_size" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_signin_forgot_password_btn"
                    android:layout_margin="@dimen/double_margin" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>