<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        tools:context=".parent.ParentDashboard">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="fill"
            android:columnCount="3">

            <!-- Column 1 : Homeworks -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/half_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_squared_icon_size"
                        android:layout_height="@dimen/dashboard_squared_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_homeworks" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/half_margin"
                        android:layout_gravity="center"
                        android:text="@string/layout_homeworks_name"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 2 : Semaphore -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/half_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_squared_icon_size"
                        android:layout_height="@dimen/dashboard_squared_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_semaphore" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/half_margin"
                        android:text="@string/layout_parent_semaphore_name"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 3 : Activities -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/half_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_squared_icon_size"
                        android:layout_height="@dimen/dashboard_squared_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_activities" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/half_margin"
                        android:layout_gravity="center"
                        android:text="@string/layout_activities_name"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 4 : Grades -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/half_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_squared_icon_size"
                        android:layout_height="@dimen/dashboard_squared_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_notes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/half_margin"
                        android:layout_gravity="center"
                        android:text="@string/layout_parent_notes_name"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 4 : Grades -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                android:visibility="invisible">

            </android.support.v7.widget.CardView>

        </GridLayout>

    </RelativeLayout>

</ScrollView>