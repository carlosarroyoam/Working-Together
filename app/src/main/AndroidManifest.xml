<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workingtogether.workingtogether">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signin"
            android:label="@string/layout_signin_name"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".Signup"
            android:parentActivityName=".Signin"
            android:label="@string/layout_signup_name"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".parent.ParentDashboard" android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".teacher.TeacherDashboard" />
        <activity android:name=".parent.ParentHomeworks" />
        <activity android:name=".parent.ParentGrades" />
        <activity android:name=".NotificationsTray" />
        <activity android:name=".teacher.TeacherHomeworks" />
        <activity android:name=".parent.ParentStudents" />
        <activity android:name=".teacher.TeacherStudents" />
        <activity android:name=".parent.ParentSemaphore" />
        <activity android:name=".parent.ParentActivities" />
        <activity android:name=".teacher.TeacherActivities" />
    </application>

</manifest>