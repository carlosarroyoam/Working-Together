<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workingtogether.workingtogether">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signin"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signin_name"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Signup"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signup_name"
            android:parentActivityName=".Signin" />
        <activity
            android:name=".parent.ParentDashboard"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".parent.ParentHomeworks"
            android:label="@string/layout_parent_homeworks_name"
            android:parentActivityName=".parent.ParentDashboard"/>
        <activity
            android:name=".parent.ParentGrades"
            android:label="@string/layout_parent_grades_name"
            android:parentActivityName=".parent.ParentDashboard"/>
        <activity
            android:name=".parent.ParentStudents"
            android:label="@string/layout_parent_students_name"
            android:parentActivityName=".parent.ParentDashboard"/>
        <activity
            android:name=".parent.ParentActivities"
            android:label="@string/layout_parent_activities_name"
            android:parentActivityName=".parent.ParentDashboard"/>
        <activity
            android:name=".parent.ParentSemaphore"
            android:label="@string/layout_parent_semaphore_name"
            android:parentActivityName=".parent.ParentDashboard"/>
        <activity
            android:name=".teacher.TeacherDashboard"
            android:label="@string/layout_teacher_dashboard_name" />
        <activity
            android:name=".teacher.TeacherHomeworks"
            android:label="@string/layout_teacher_homeworks_name" />
        <activity
            android:name=".teacher.TeacherStudents"
            android:label="@string/layout_teacher_students_name" />
        <activity
            android:name=".teacher.TeacherActivities"
            android:label="@string/layout_teacher_activities_name" />
    </application>

</manifest>