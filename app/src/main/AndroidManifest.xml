<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workingtogether.workingtogether">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signin"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signin_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Signup"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signup_name"
            android:parentActivityName=".Signin"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Dashboard"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_dashboard_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationsTray"
            android:label="@string/layout_notifications_tray_name"/>
        <activity
            android:name=".Homeworks"
            android:label="@string/layout_homeworks_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".parent.ParentNotes"
            android:label="@string/layout_parent_notes_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".parent.ParentStudents"
            android:label="@string/layout_parent_students_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".Activities"
            android:label="@string/layout_activities_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".parent.ParentSemaphore"
            android:label="@string/layout_parent_semaphore_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".teacher.TeacherHomeworks"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_teacher_homeworks_name"
            android:parentActivityName=".Dashboard"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".teacher.TeacherStudents"
            android:label="@string/layout_teacher_students_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".teacher.TeacherActivities"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_teacher_activities_name"
            android:parentActivityName=".Dashboard"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".teacher.TeacherNotes"
            android:label="@string/layout_teacher_notes_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".HomeworkDetails"
            android:parentActivityName=".Homeworks" />
        <activity
            android:name=".ActivityDetails"
            android:parentActivityName=".Activities" />

        <service android:name=".firebase.FirebaseInstanceServiceId">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".firebase.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>