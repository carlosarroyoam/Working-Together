<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workingtogether.workingtogether">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SigninActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signin_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activities.SignupActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_signup_name"
            android:parentActivityName=".activities.SigninActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activities.DashboardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_dashboard_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.NotificationsTrayActivity"
            android:label="@string/layout_notifications_tray_name" />
        <activity
            android:name=".activities.HomeworksActivity"
            android:label="@string/layout_homeworks_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.HomeworkDetailsActivity"
            android:parentActivityName=".activities.HomeworksActivity" />
        <activity
            android:name=".activities.ConversationsActivity"
            android:label="@string/layout_messages_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.ContactsActivity"
            android:label="@string/layout_contacts_name"
            android:parentActivityName=".activities.ConversationsActivity" />
        <activity
            android:name=".activities.ConversationDetailsActivity"
            android:parentActivityName=".activities.ConversationsActivity" />
        <activity
            android:name=".parent.ParentNotes"
            android:label="@string/layout_parent_notes_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".parent.ParentStudents"
            android:label="@string/layout_parent_students_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.ActivitiesActivity"
            android:label="@string/layout_activities_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.DetailsActivity"
            android:parentActivityName=".activities.ActivitiesActivity" />
        <activity
            android:name=".parent.ParentSemaphore"
            android:label="@string/layout_parent_semaphore_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".teacher.TeacherHomeworks"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_teacher_homeworks_name"
            android:parentActivityName=".activities.DashboardActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".teacher.TeacherStudents"
            android:label="@string/layout_teacher_students_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".teacher.TeacherActivities"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/layout_teacher_activities_name"
            android:parentActivityName=".activities.DashboardActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".teacher.TeacherNotes"
            android:label="@string/layout_teacher_notes_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.TechnicalSupportActivity"
            android:label="@string/layout_support_name"
            android:parentActivityName=".activities.DashboardActivity" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/layout_about_name"
            android:parentActivityName=".activities.DashboardActivity" />

        <service android:name=".firebase.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>